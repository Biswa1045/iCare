<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.igit.icare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ICare">
        <activity
            android:name="com.igit.icare.LoginActivity"
            android:windowSoftInputMode="adjustPan"
            android:exported="false" />
        <activity
            android:name="com.igit.icare.DoctorActivity"
            android:exported="false" />
        <activity android:name="com.igit.icare.HistoryActivity" />
        <activity android:name="com.igit.icare.HomeActivity" />
        <activity
            android:name="com.igit.icare.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>