<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.igit.icare.HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/back_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"

            android:src="@drawable/bg_home" />
    </RelativeLayout>
        <LinearLayout
            android:id="@+id/l1"
            android:layout_marginTop="30dp"
           android:layout_marginHorizontal="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/profile"
                android:layout_width="45dp"
                app:cardCornerRadius="25dp"
                android:layout_height="45dp"
                >
                <ImageView
                    android:id="@+id/profile_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/man"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="22dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

       <ScrollView

           android:layout_below="@+id/l1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >
           <LinearLayout
               android:layout_margin="5dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/greetings"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:fontFamily="@font/aclonica"
                   android:text="Good Morning Rahul"
                   android:textColor="@color/white"
                   android:textSize="24dp"
                   android:textStyle="bold" />
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Mon, Nov 18, 2021"
                   android:textColor="@color/sky"
                   android:textSize="18dp"
                   android:id="@+id/date"
                   android:textStyle="bold" />
               <androidx.cardview.widget.CardView
                   android:elevation="10dp"
                   android:id="@+id/temp_card"
                   android:layout_marginTop="20dp"
                   android:layout_width="match_parent"
                   android:foreground="?android:attr/selectableItemBackground"
                   android:clickable="true"
                   android:layout_height="130dp"
                   app:cardCornerRadius="20dp">
                   <LinearLayout

                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/light_back"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:gravity="center"
                           android:layout_weight="1.8"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                          >
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:src="@drawable/temperature"
                               android:layout_gravity="center_vertical"
                              />
                           <TextView
                               android:layout_width="match_parent"
                               android:textAlignment="center"
                               android:layout_height="wrap_content"
                               android:text="Temperature"
                               android:textStyle="bold"
                               android:textSize="18dp"
                               android:textColor="@color/sky"
                               />
                       </LinearLayout>
                       <TextView
                           android:gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:textColor="@color/white"
                           android:text=""
                           android:id="@+id/temp_txt"
                           android:textSize="30dp"
                           android:textStyle="bold"
                           />
                   </LinearLayout>

               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:elevation="10dp"
                   android:id="@+id/bpm_card"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:foreground="?android:attr/selectableItemBackground"
                   android:clickable="true"
                   android:layout_height="130dp"
                   app:cardCornerRadius="20dp">
                   <LinearLayout

                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/light_back"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:gravity="center"
                           android:layout_weight="1.8"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           >
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:src="@drawable/heartbeat"
                               android:layout_gravity="center_vertical"
                               />
                           <TextView
                               android:layout_width="match_parent"
                               android:textAlignment="center"
                               android:layout_height="wrap_content"
                               android:text="Heart Beat"
                               android:textStyle="bold"
                               android:textSize="18dp"
                               android:textColor="@color/sky"
                               />
                       </LinearLayout>
                       <TextView
                           android:gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:textColor="@color/white"
                           android:text=""
                           android:id="@+id/heart_txt"
                           android:textSize="30dp"
                           android:textStyle="bold"
                           />
                   </LinearLayout>

               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:elevation="10dp"
                   android:id="@+id/oximeter_card"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:foreground="?android:attr/selectableItemBackground"
                   android:clickable="true"
                   android:layout_height="130dp"
                   app:cardCornerRadius="20dp">
                   <LinearLayout

                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/light_back"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:gravity="center"
                           android:layout_weight="1.8"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           >
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:src="@drawable/oxygen"
                               android:layout_gravity="center_vertical"
                               />
                           <TextView
                               android:layout_width="match_parent"
                               android:textAlignment="center"
                               android:layout_height="wrap_content"
                               android:text="Oximeter"
                               android:textStyle="bold"
                               android:textSize="18dp"
                               android:textColor="@color/sky"
                               />
                       </LinearLayout>
                       <TextView
                           android:gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:textColor="@color/white"
                           android:text=""
                           android:id="@+id/oxy_txt"
                           android:textSize="30dp"
                           android:textStyle="bold"
                           />
                   </LinearLayout>

               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:elevation="10dp"
                   android:id="@+id/report_card"
                   android:layout_marginTop="20dp"
                   android:layout_width="match_parent"
                   android:foreground="?android:attr/selectableItemBackground"
                   android:clickable="true"
                   android:layout_height="130dp"
                   app:cardCornerRadius="20dp">
                   <LinearLayout

                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:background="@color/light_back"
                       android:orientation="horizontal">
                       <LinearLayout
                           android:gravity="center"
                           android:layout_weight="1.8"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           >
                           <ImageView
                               android:layout_width="match_parent"
                               android:layout_height="50dp"
                               android:src="@drawable/ic_baseline_history_24"
                               android:layout_gravity="center_vertical"
                               />

                       </LinearLayout>
                       <TextView
                           android:gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:layout_weight="1"
                           android:textColor="@color/white"
                           android:text="Your Activity"
                           android:textSize="30dp"
                           android:textStyle="bold"
                           />
                   </LinearLayout>

               </androidx.cardview.widget.CardView>
               <LinearLayout
                   android:visibility="visible"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">
                   <HorizontalScrollView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="Temp"
                               android:textColor="@color/white"/>
                           <Button
                               android:backgroundTint="@color/red"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="stop"
                               android:id="@+id/stop_temp"
                               />
                           <Button
                               android:backgroundTint="@color/brown"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="34-36"
                               android:layout_marginLeft="5dp"
                               android:id="@+id/range_1_temp"
                               />
                           <Button
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="35-37"
                               android:layout_marginLeft="5dp"
                               android:id="@+id/range_2_temp"
                               android:backgroundTint="@color/brown"
                               />
                           <Button
                               android:layout_marginLeft="5dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="37-38"
                               android:id="@+id/range_3_temp"
                               android:backgroundTint="@color/brown"
                               />
                           <Button
                               android:layout_marginLeft="5dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="out of limit"
                               android:id="@+id/range_4_temp"
                               android:backgroundTint="@color/brown"

                               />
                       </LinearLayout>
                   </HorizontalScrollView>
                   <HorizontalScrollView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="BPM"
                               android:textColor="@color/white"/>
                           <Button
                               android:backgroundTint="@color/red"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="stop"
                               android:id="@+id/stop_bpm"
                               />
                           <Button
                               android:backgroundTint="@color/brown"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="60-70"
                               android:layout_marginLeft="5dp"
                               android:id="@+id/range_1_bpm"
                               />
                           <Button
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="70-80"
                               android:layout_marginLeft="5dp"
                               android:id="@+id/range_2_bpm"
                               android:backgroundTint="@color/brown"
                               />
                           <Button
                               android:layout_marginLeft="5dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="90-100"
                               android:id="@+id/range_3_bpm"
                               android:backgroundTint="@color/brown"
                               />
                           <Button
                               android:layout_marginLeft="5dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="out of limit"
                               android:id="@+id/range_4_bpm"
                               android:backgroundTint="@color/brown"

                               />
                       </LinearLayout>
                   </HorizontalScrollView>
                   <HorizontalScrollView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       >
                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="horizontal">

                           <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="SpO2"
                               android:textColor="@color/white"/>
                           <Button
                               android:backgroundTint="@color/red"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="stop"
                               android:id="@+id/stop_spo2"
                               />
                           <Button
                               android:backgroundTint="@color/brown"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="95-96"
                               android:layout_marginLeft="5dp"
                               android:id="@+id/range_1_spo2"
                               />
                           <Button
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="96-97"
                               android:layout_marginLeft="5dp"
                               android:id="@+id/range_2_spo2"
                               android:backgroundTint="@color/brown"
                               />
                           <Button
                               android:layout_marginLeft="5dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="98-99"
                               android:id="@+id/range_3_spo2"
                               android:backgroundTint="@color/brown"
                               />
                           <Button
                               android:layout_marginLeft="5dp"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:text="out of limit"
                               android:id="@+id/range_4_spo2"
                               android:backgroundTint="@color/brown"

                               />
                       </LinearLayout>
                   </HorizontalScrollView>
               </LinearLayout>







           </LinearLayout>
       </ScrollView>



</RelativeLayout>