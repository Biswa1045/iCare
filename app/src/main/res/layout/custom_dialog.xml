<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_gravity="center"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:backgroundTint="@color/background"
        android:orientation="vertical"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:layout_height="475dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/cancel_dailog"
                    android:src="@drawable/ic_baseline_clear_24"/>

            </LinearLayout>
            <TextView
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:text="iCare"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                />
            <LinearLayout
                android:paddingHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="60dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    app:cardCornerRadius="30dp">
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/man"/>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Biswajit Sahu"
                        android:textSize="18dp"
                        android:id="@+id/name"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/email"
                        android:layout_height="wrap_content"
                        android:text="Biswajitsahu1045@gmail.com"
                        android:textSize="14dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#CBFFFFFF"
                        />
                </LinearLayout>

            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:id="@+id/logout"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="115dp"
                app:cardCornerRadius="20dp"
                >
              <androidx.cardview.widget.CardView
                  android:layout_width="88dp"

                  android:id="@+id/logout_real"
                  android:layout_gravity="center"
                  android:layout_height="28dp"
                  android:backgroundTint="@color/background"
                  app:cardCornerRadius="20dp">
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Logout"
                      android:textColor="@color/white"
                      android:layout_gravity="center"/>

              </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
            <View
                android:layout_marginTop="15dp"
                android:layout_below="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBFFFFFF"/>
            <ScrollView
                android:layout_above="@+id/view_2"
                android:layout_marginTop="30dp"
                android:layout_below="@id/logout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout

                        android:id="@+id/history"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="8dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_history_24"
                            />
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Your History"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/doctor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginLeft="8dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_baseline_person_24"
                            />
                        <TextView
                            android:layout_marginLeft="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Doctors"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="18dp"
                            />
                    </LinearLayout>

                </LinearLayout>

            </ScrollView>
            <View
                android:id="@+id/view_2"
                android:layout_marginBottom="30dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="15dp"

                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CBFFFFFF"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

